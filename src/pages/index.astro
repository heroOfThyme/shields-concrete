---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import ExpandableServices from '~/components/widgets/ExpandableServices.astro';
import FinishingStyles from '~/components/widgets/FinishingStyles.astro';
import SimpleGallery from '~/components/widgets/SimpleGallery.astro';
import ShieldsContact from '~/components/widgets/ShieldsContact.astro';
import Image from '~/components/common/Image.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Concrete Contractor Windsor | Driveways, Patios & More | Shields Cement',
  ignoreTitleTemplate: true,
  description:
    'Professional concrete services in Windsor & Essex County. Driveways, patios, sidewalks, garage floors & more. Licensed, insured & guaranteed. Call us today.',
  canonical: 'https://shieldscement.ca',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    url: 'https://shieldscement.ca',
    images: [
      {
        url: '~/assets/images/cement-patio-and-stairs.jpg',
        width: 1200,
        height: 628,
      },
    ],
    locale: 'en_CA',
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero2
    id="home"
    title="Professional Concrete Solutions"
    subtitle="Professional concrete services for residential and commercial properties in Windsor & Essex County. Quality workmanship, competitive pricing, and guaranteed results."
    actions={[
      { variant: 'primary', text: 'Call (226) 350-4642', href: 'tel:2263504642' },
      { variant: 'secondary', text: 'See Our Services', href: '#services' },
    ]}
  >
    <Fragment slot="bg">
      <Image
        src="~/assets/images/finished-driveway-7.jpg"
        alt="cement texture background"
        class="absolute inset-0 w-full h-full object-cover z-0"
      />
      <div class="absolute inset-0 bg-black opacity-50 z-10"></div>
    </Fragment>
  </Hero2>

  <!-- About Section **************** -->
  <Content
    id="about"
    tagline="Our Story"
    title="Built on Trust, Proven by Results"
    subtitle="Windsor's trusted concrete specialists"
    isReversed={true}
    image={{
      src: '~/assets/images/finished-driveway-7.jpg',
      alt: 'Tristan Shields working on concrete project',
    }}
    items={[
      {
        title: 'Licensed & Insured',
        description: 'Fully licensed and insured for your peace of mind.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Quality Workmanship',
        description: 'We take pride in delivering top-notch concrete solutions.',
        icon: 'tabler:home-check',
      },
      {
        title: 'Professional Installation',
        description: 'Proper techniques and materials every single time.',
        icon: 'tabler:tools',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="md:text-4xl text-2xl font-bold mb-2 font-heading">Your Local concrete Experts</h3>
      <p class="text-lg mb-4">
        For over 15 years, Shields Cement has been Windsor's go-to concrete contractor for residential and commercial
        projects. Founded by Tristan Shields, our company has built a reputation for delivering exceptional concrete
        work that stands the test of time. We specialize in all aspects of concrete installation, from residential
        driveways and patios to commercial foundations and industrial flooring.
      </p>
    </Fragment>
  </Content>

  <CallToAction
    tagline="Ready to Start?"
    title="Let's Build <br>Something Great"
    subtitle="Professional concrete work with guaranteed results - call now!"
    actions={[
      {
        variant: 'primary',
        text: 'Call (226) 350-4642',
        href: 'tel:2263504642',
      },
    ]}
  >
    <Fragment slot="bg">
      <Image
        src="~/assets/images/cement-backyard-deck.jpg"
        alt="Professional concrete work in progress"
        class="absolute inset-0 w-full h-full object-cover z-10"
      />
      <div class="absolute inset-0 bg-black opacity-70 z-20"></div>
    </Fragment>
  </CallToAction>

  <!-- Services Section **************** -->
  <ExpandableServices
    id="services"
    tagline="What We Build"
    title="Our Solutions Are <span class='bg-primary px-2 text-white'>Concrete</span>"
    subtitle="Professional solutions for every concrete need in Windsor"
    columns={3}
    services={[
      {
        title: 'Residential Driveways',
        description:
          'Professional driveway installation that enhances curb appeal and provides lasting durability for your home.',
        icon: 'tabler:car',
        priceRange: '$8-12/sqft',
        image: {
          src: '~/assets/images/finished-driveway-7.jpg',
          alt: 'concrete driveway installation',
        },
      },
      {
        title: 'Backyards',
        description:
          'Transform your backyard with custom concrete patios perfect for outdoor entertainment and relaxation.',
        icon: 'tabler:umbrella',
        priceRange: '$12/sqft',
        image: {
          src: '~/assets/images/cement-pool-deck-windsor.jpg',
          alt: 'Cement pool deck installation',
        },
      },
      {
        title: 'Porches & Entryways',
        description: 'Welcoming concrete porches and entryways that make a lasting first impression for your home.',
        icon: 'tabler:home',
        priceRange: '$5,000',
        image: {
          src: '~/assets/images/cement-stairs-to-porch-windsor.jpg',
          alt: 'concrete porch installation',
        },
      },
      {
        title: 'Garage & Basement Floors',
        description:
          'Durable interior concrete floors designed for heavy use with moisture control and smooth finishes.',
        icon: 'tabler:building',
        priceRange: '$4-7/sqft',
        image: {
          src: '~/assets/images/garage-flooring-commercial.jpg',
          alt: 'concrete floor installation',
        },
      },
      {
        title: 'Custom & Specialty Projects',
        description:
          'Got something unique in mind? We love tackling custom concrete projects and bringing your vision to life.',
        icon: 'tabler:bulb',
        priceRange: 'Custom Quote',
        isSpecial: true,
      },
    ]}
  />

  <!-- Finishing Styles Section ********** -->
  <FinishingStyles
    id="finishes"
    tagline="Finishing Options"
    title="Choose Your <span class='text-brand-red'>Perfect</span> Finish"
    subtitle="From smooth and elegant to textured and decorative - find the right finish for your project"
    styles={[
      {
        id: 'broom',
        name: 'Broom',
        description:
          'The most popular and practical concrete finish, created by dragging a broom across wet concrete to create subtle texture lines that provide excellent traction.',
        characteristics: [
          'Excellent slip resistance',
          'Hides minor imperfections',
          'Easy maintenance',
          'Weather resistant',
          'Quick installation',
        ],
        mainImage: '~/assets/images/finished-driveway-1.jpg',
        detailImage: '~/assets/images/brushed-cement-closeup.jpg',
        icon: 'tabler:brush',
        bestFor: 'Driveways, sidewalks, and high-traffic areas where safety and practicality are important',
      },
      {
        id: 'rosette',
        name: 'Rosette/Spin',
        description:
          'A decorative swirled pattern created by spinning a float in circular motions, producing an elegant rosette or spiral texture that adds visual interest.',
        characteristics: [
          'Unique decorative pattern',
          'Good slip resistance',
          'Adds visual texture',
          'Professional appearance',
          'Skilled application required',
        ],
        mainImage: '~/assets/images/spin-finish-driveway.jpg',
        detailImage: '~/assets/images/rosette-concrete-finish.webp',
        icon: 'tabler:spiral',
        bestFor: 'Patios, pool decks, and decorative areas where aesthetics matter as much as function',
      },
      {
        id: 'stamped',
        name: 'Stamped Concrete',
        description:
          'Premium decorative finish that mimics the look of stone, brick, or tile using specialized stamps and color treatments for a high-end appearance.',
        characteristics: [
          'Mimics expensive materials',
          'Wide variety of patterns',
          'Color options available',
          'Increases property value',
          'Durable and long-lasting',
          'Custom design possibilities',
        ],
        mainImage: '~/assets/images/stamped-cement-backyard-patio.jpg',
        detailImage: '~/assets/images/stamped-concrete-closeup.jpg',
        icon: 'tabler:rubber-stamp',
        bestFor: 'Upscale patios, walkways, and areas where you want the look of natural stone or pavers',
      },
      {
        id: 'exposed',
        name: 'Exposed Aggregate',
        description:
          'A textured finish revealing decorative stones and aggregate within the concrete, creating a natural, slip-resistant surface with excellent durability.',
        characteristics: [
          'Natural stone appearance',
          'Superior slip resistance',
          'Extremely durable',
          'Low maintenance',
          'Variety of stone options',
          'Timeless aesthetic',
        ],
        mainImage: '~/assets/images/aggregate-cement-driveway.jpg',
        detailImage: '~/assets/images/aggregate-concrete-closeup.jpg',
        icon: 'tabler:wall',
        bestFor: 'Pool areas, outdoor entertaining spaces, and areas requiring maximum slip resistance',
      },
    ]}
  />

  <!-- Project Section **************** -->
  <SimpleGallery
    id="projects"
    tagline="Proven Results"
    title="Our Recent Work"
    subtitle="See the quality and craftsmanship that sets Shields Cement apart"
    images={[
      {
        src: '~/assets/images/finished-driveway-7.jpg',
        alt: 'Beautiful concrete driveway in Windsor',
        category: 'Driveways',
        title: 'Modern Residential Driveway',
      },
      {
        src: '~/assets/images/cement-patio-and-stairs.jpg',
        alt: 'Concrete leading patio',
        category: 'Patios',
        title: 'Concrete Backyard Patio',
      },
      {
        src: '~/assets/images/stamped-cement-backyard-patio.jpg',
        alt: 'Stamped concrete patio with decorative finish',
        category: 'Patios',
        title: 'Stamped Concrete Patio',
      },
      {
        src: '~/assets/images/finished-driveway-1.jpg',
        alt: 'New residential driveway',
        category: 'Driveways',
        title: 'Broom Finished Driveway',
      },
      {
        src: '~/assets/images/spin-finish-driveway.jpg',
        alt: 'Residential driveway with rosette/spin finish',
        category: 'Driveways',
        title: 'Rosette Finish Driveway',
      },
      {
        src: '~/assets/images/cement-stairs-to-porch-windsor.jpg',
        alt: 'Stamped concrete patio',
        category: 'Patios',
        title: 'Sharp Stairs and Patio',
      },
    ]}
  />

  <Testimonials
    id="testimonials"
    tagline="Happy Customers"
    title="What Our Customers Say"
    subtitle="We take pride in our work and our customers' satisfaction is our top priority."
    tagline="Testimonials"
    testimonials={[
      {
        title: 'Excellent Driveway Work',
        testimonial:
          'Shields Cement did an amazing job on our driveway. Professional, on time, and the quality is outstanding!',
        name: 'Sarah Johnson',
        job: 'Windsor Homeowner',
        image: { src: '~/assets/images/customer1.jpg', alt: 'Sarah Johnson' },
      },
      {
        title: 'Excellent Driveway Work',
        testimonial:
          'Shields cement did an amazing job on our driveway. Professional, on time, and the quality is outstanding!',
        name: 'Sarah Johnson',
        job: 'Windsor Homeowner',
        image: { src: '~/assets/images/customer1.jpg', alt: 'Sarah Johnson' },
      },
      {
        title: 'Excellent Driveway Work',
        testimonial:
          'Shields cement did an amazing job on our driveway. Professional, on time, and the quality is outstanding!',
        name: 'Sarah Johnson',
        job: 'Windsor Homeowner',
        image: { src: '~/assets/images/customer1.jpg', alt: 'Sarah Johnson' },
      },
      // ... more testimonials
    ]}
    callToAction={{
      text: 'Get Your Free Quote',
      href: '#contact',
    }}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    tagline="Quick Answers"
    id="faqs"
    title="Frequently Asked Questions"
    subtitle="Everything you need to know about concrete installation in Windsor"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'How long does concrete take to cure?',
        description:
          "concrete reaches initial set in 24-48 hours, but full strength develops over 28 days. We'll provide specific timelines for when you can walk on, drive on, or put full loads on your new concrete surface.",
      },
      {
        title: "What's the best time of year for concrete work in Windsor?",
        description:
          'The ideal season is late spring through early fall when temperatures consistently stay above 10°C. However, we can work year-round with proper cold weather protection techniques.',
      },
      {
        title: 'Do you provide free estimates?',
        description:
          "Costs vary based on size, site conditions, and finishing options. Basic driveways typically range from $8-12 per square foot, while decorative options may be higher. We'll provide exact pricing in your free estimate.",
      },
      {
        title: 'Do you handle permits and inspections?',
        description:
          'Absolutely. We handle all necessary permits and coordinate inspections with local municipalities. This ensures your project meets all building codes and regulations.',
      },
    ]}
  />

  <!-- Contact Section **************** -->
  <ShieldsContact
    id="contact"
    tagline="Let's Connect"
    title="Ready to Start Your Project?"
    subtitle="Get your free quote today - no obligation, just honest pricing for quality work"
  />
</Layout>
