---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import ExpandableServices from '~/components/widgets/ExpandableServices.astro';
import SimpleGallery from '~/components/widgets/SimpleGallery.astro';
import ShieldsContact from '~/components/widgets/ShieldsContact.astro';
import Image from '~/components/common/Image.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'cement Contractor Windsor | Driveways, Patios & More | Shields cement',
  ignoreTitleTemplate: true,
  description:
    'Professional cement services in Windsor & Essex County. Driveways, patios, sidewalks, garage floors & more. Licensed, insured & guaranteed. Call (226) 350-4642 for free quote.',
  canonical: 'https://shieldscement.ca',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    url: 'https://shieldscement.ca',
    siteName: 'Shields cement',
    images: [
      {
        url: '~/assets/images/finished-driveway-1.jpg',
        width: 1200,
        height: 628,
      },
    ],
    locale: 'en_CA',
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero2
    id="home"
    tagline="Windsor\'s cement Experts"
    title="Windsor\'s Premier Cement Contractor"
    subtitle="Professional cement services for residential and commercial properties in Windsor & Essex County. Quality workmanship, competitive pricing, and guaranteed results."
    actions={[
      { variant: 'primary', text: 'Call (226) 350-4642', href: 'tel:2263504642' },
      { variant: 'secondary', text: 'See Our Services', href: '#services' },
    ]}
  >
    <Fragment slot="bg">
      <Image
        src="~/assets/images/finished-driveway-1.jpg"
        alt="cement texture background"
        class="absolute inset-0 w-full h-full object-cover z-0"
      />
      <div class="absolute inset-0 bg-black opacity-50 z-10"></div>
    </Fragment>
  </Hero2>

  <!-- About Section **************** -->
  <Content
    id="about"
    tagline="Our Story"
    title="About Shields cement"
    subtitle="Windsor's trusted cement specialists"
    isReversed={true}
    image={{
      src: '~/assets/images/finished-driveway-5.jpg',
      alt: 'Tristan Shields working on cement project',
    }}
    items={[
      {
        title: 'Licensed & Insured',
        description: 'Fully licensed and insured for your peace of mind.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Quality Workmanship',
        description: 'We take pride in delivering top-notch cement solutions.',
        icon: 'tabler:home-check',
      },
      {
        title: 'Professional Installation',
        description: 'Proper techniques and materials every single time.',
        icon: 'tabler:tools',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="md:text-4xl text-2xl font-bold mb-2 font-heading">Your Local cement Experts</h3>
      <p class="text-lg mb-4">
        For over 15 years, Shields cement has been Windsor's go-to cement contractor for residential and commercial
        projects. Founded by Tristan Shields, our company has built a reputation for delivering exceptional cement
        work that stands the test of time. We specialize in all aspects of cement installation, from residential
        driveways and patios to commercial foundations and industrial flooring.
      </p>
    </Fragment>
  </Content>

  <CallToAction
    tagline="Ready to Start?"
    title="Let's Build <br>Something Great"
    subtitle="Professional cement work with guaranteed results - call now!"
    actions={[
      {
        variant: 'primary',
        text: 'Call (226) 350-4642',
        href: 'tel:2263504642',
      },
      {
        variant: 'secondary',
        text: 'Send Us a Message',
        href: '#contact',
      },
    ]}
  >
    <Fragment slot="bg">
      <Image
        src="~/assets/images/cement-backyard-deck.jpg"
        alt="Professional cement work in progress"
        class="absolute inset-0 w-full h-full object-cover z-10"
      />
      <div class="absolute inset-0 bg-black opacity-70 z-20"></div>
    </Fragment>
  </CallToAction>

  <!-- Services Section **************** -->
  <ExpandableServices
    id="services"
    tagline="What We Build"
    title="Our cement Services"
    subtitle="Professional solutions for every cement need in Windsor"
    columns={3}
    services={[
      {
        title: 'Residential Driveways',
        description:
          'Professional driveway installation that enhances curb appeal and provides lasting durability for your home.',
        icon: 'tabler:car',
        priceRange: '$8-12/sq ft',
        image: {
          src: '~/assets/images/finished-driveway-7.jpg',
          alt: 'cement driveway installation',
        },
      },
      {
        title: 'Patios & Outdoor Living',
        description:
          'Transform your backyard with custom cement patios perfect for outdoor entertainment and relaxation.',
        icon: 'tabler:umbrella',
        priceRange: '$6-10/sq ft',
        image: {
          src: '~/assets/images/cement-backyard-deck-2.jpg',
          alt: 'cement patio installation',
        },
      },
      {
        title: 'Sidewalks & Walkways',
        description: 'Safe, accessible walkways that meet municipal standards and enhance your property value.',
        icon: 'tabler:walk',
        priceRange: '$5-8/sq ft',
        image: {
          src: '~/assets/images/cement-pathway-windsor.jpg',
          alt: 'cement sidewalk installation',
        },
      },
      {
        title: 'Porches & Entryways',
        description: 'Welcoming cement porches and entryways that make a lasting first impression for your home.',
        icon: 'tabler:home',
        priceRange: '$10-15/sq ft',
        image: {
          src: '~/assets/images/cement-patio-and-stairs.jpg',
          alt: 'cement porch installation',
        },
      },
      {
        title: 'Garage & Basement Floors',
        description:
          'Durable interior cement floors designed for heavy use with moisture control and smooth finishes.',
        icon: 'tabler:building',
        priceRange: '$4-7/sq ft',
        image: {
          src: '~/assets/images/cement-patio-and-stairs.jpg',
          alt: 'cement floor installation',
        },
      },
      {
        title: 'Commercial Projects',
        description:
          'Heavy-duty cement solutions for business properties including parking lots and industrial flooring.',
        icon: 'tabler:building-warehouse',
        priceRange: '$3-6/sq ft',
        image: {
          src: '~/assets/images/commercial-cement-dock-windsor.jpg',
          alt: 'Commercial cement work',
        },
      },
    ]}
  />

  <!-- Project Section **************** -->
  <SimpleGallery
    id="projects"
    tagline="Proven Results"
    title="Our Recent Work"
    subtitle="See the quality and craftsmanship that sets Shields cement apart"
    images={[
      {
        src: '~/assets/images/finished-driveway-7.jpg',
        alt: 'Beautiful cement driveway in Windsor',
        category: 'Driveways',
        title: 'Modern Residential Driveway',
      },
      {
        src: '~/assets/images/cement-stairs-to-porch-windsor.jpg',
        alt: 'Stamped cement patio',
        category: 'Patios',
        title: 'Sharp Stairs and Patio',
      },
      {
        src: '~/assets/images/commercial-cement-dock-windsor.jpg',
        alt: 'Commercial cement dock',
        category: 'Commercial Projects',
        title: 'Heavy-Duty Commercial Dock',
      },
      {
        src: '~/assets/images/finished-driveway-3.jpg',
        alt: 'New residential driveway',
        category: 'Driveways',
        title: 'Freshly Poured Driveway',
      },
      {
        src: '~/assets/images/finished-driveway-6.jpg',
        alt: 'Residential driveway with smooth finish',
        category: 'Driveways',
        title: 'Smooth Cement Driveway',
      },
      {
        src: '~/assets/images/finished-driveway-5.jpg',
        alt: 'Residential driveway with decorative finish',
        category: 'Driveways',
        title: 'Decorative Driveway Finish',
      },
    ]}
  />

  <Testimonials
    id="testimonials"
    tagline="Happy Customers"
    title="What Our Customers Say"
    subtitle="We take pride in our work and our customers' satisfaction is our top priority."
    tagline="Testimonials"
    testimonials={[
      {
        title: 'Excellent Driveway Work',
        testimonial:
          'Shields cement did an amazing job on our driveway. Professional, on time, and the quality is outstanding!',
        name: 'Sarah Johnson',
        job: 'Windsor Homeowner',
        image: { src: '~/assets/images/customer1.jpg', alt: 'Sarah Johnson' },
      },
      {
        title: 'Excellent Driveway Work',
        testimonial:
          'Shields cement did an amazing job on our driveway. Professional, on time, and the quality is outstanding!',
        name: 'Sarah Johnson',
        job: 'Windsor Homeowner',
        image: { src: '~/assets/images/customer1.jpg', alt: 'Sarah Johnson' },
      },
      {
        title: 'Excellent Driveway Work',
        testimonial:
          'Shields cement did an amazing job on our driveway. Professional, on time, and the quality is outstanding!',
        name: 'Sarah Johnson',
        job: 'Windsor Homeowner',
        image: { src: '~/assets/images/customer1.jpg', alt: 'Sarah Johnson' },
      },
      // ... more testimonials
    ]}
    callToAction={{
      text: 'Get Your Free Quote',
      href: '#contact',
    }}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    tagline="Quick Answers"
    id="faqs"
    title="Frequently Asked Questions"
    subtitle="Everything you need to know about cement installation in Windsor"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'How long does cement take to cure?',
        description:
          "cement reaches initial set in 24-48 hours, but full strength develops over 28 days. We'll provide specific timelines for when you can walk on, drive on, or put full loads on your new cement surface.",
      },
      {
        title: "What's the best time of year for cement work in Windsor?",
        description:
          'The ideal season is late spring through early fall when temperatures consistently stay above 10Â°C. However, we can work year-round with proper cold weather protection techniques.',
      },
      {
        title: 'Do you provide free estimates?',
        description:
          "Costs vary based on size, site conditions, and finishing options. Basic driveways typically range from $8-12 per square foot, while decorative options may be higher. We'll provide exact pricing in your free estimate.",
      },
      {
        title: 'Do you handle permits and inspections?',
        description:
          'Absolutely. We handle all necessary permits and coordinate inspections with local municipalities. This ensures your project meets all building codes and regulations.',
      },
    ]}
  />

  <!-- Contact Section **************** -->
  <ShieldsContact
    id="contact"
    tagline="Let's Connect"
    title="Ready to Start Your Project?"
    subtitle="Get your free quote today - no obligation, just honest pricing for quality work"
  />
</Layout>
