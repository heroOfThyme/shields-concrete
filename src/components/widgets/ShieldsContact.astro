---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Button from '~/components/ui/Button.astro';
import { Icon } from 'astro-icon/components';
import type { Widget } from '~/types';

export interface Props extends Widget {
  title?: string;
  subtitle?: string;
  tagline?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-3xl mx-auto text-center mb-16',
      title: 'text-4xl md:text-5xl font-black tracking-tight mb-6 font-heading text-slate-900 dark:text-white',
      subtitle: 'text-xl md:text-2xl text-slate-600 dark:text-slate-300 font-medium relative',
    }}
  />

  <div class="grid lg:grid-cols-2 gap-12 items-start">
    <!-- Contact Form -->
    <div class="bg-slate-50 dark:bg-slate-800 rounded-2xl shadow-sm p-8 border border-slate-100 dark:border-slate-700">
      <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">Get Your Free Quote</h3>

      <form class="space-y-6" action="#" method="POST">
        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <label for="firstName" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
              First Name *
            </label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              required
              class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:border-transparent transition-all duration-200"
              style="focus:ring-color: var(--aw-color-primary);"
              placeholder="John"
            />
          </div>
          <div>
            <label for="lastName" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
              Last Name *
            </label>
            <input
              type="text"
              id="lastName"
              name="lastName"
              required
              class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:border-transparent transition-all duration-200"
              style="focus:ring-color: var(--aw-color-primary);"
              placeholder="Smith"
            />
          </div>
        </div>

        <div>
          <label for="email" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
            Email Address *
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:border-transparent transition-all duration-200"
            style="focus:ring-color: var(--aw-color-primary);"
            placeholder="john@example.com"
          />
        </div>

        <div>
          <label for="phone" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
            Phone Number
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:border-transparent transition-all duration-200"
            style="focus:ring-color: var(--aw-color-primary);"
            placeholder="(226) 123-4567"
          />
        </div>

        <div>
          <label for="projectType" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
            Project Type *
          </label>
          <select
            id="projectType"
            name="projectType"
            required
            class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:border-transparent transition-all duration-200"
            style="focus:ring-color: var(--aw-color-primary);"
          >
            <option value="">Select a service...</option>
            <option value="driveway">Driveway</option>
            <option value="patio">Patio</option>
            <option value="sidewalk">Sidewalk</option>
            <option value="porch">Porch</option>
            <option value="garage">Garage Floor</option>
            <option value="basement">Basement Floor</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div>
          <label for="message" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
            Project Details
          </label>
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:border-transparent transition-all duration-200 resize-vertical"
            style="focus:ring-color: var(--aw-color-primary);"
            placeholder="Tell us about your project - size, timeline, specific requirements..."></textarea>
        </div>

        <Button
          type="submit"
          variant="primary"
          class="w-full font-bold py-4 px-6 transition-all duration-200 shadow-sm hover:shadow-md group"
          style="background-color: var(--aw-color-primary); border-color: var(--aw-color-primary);"
          onmouseover="this.style.backgroundColor='var(--aw-color-secondary)'; this.style.borderColor='var(--aw-color-secondary)';"
          onmouseout="this.style.backgroundColor='var(--aw-color-primary)'; this.style.borderColor='var(--aw-color-primary)';"
        >
          Send Free Quote Request
          <Icon
            name="tabler:send"
            class="w-5 h-5 ml-2 inline group-hover:translate-x-1 transition-transform duration-200"
          />
        </Button>

        <p class="text-sm text-slate-600 dark:text-slate-400 text-center">
          We'll get back to you within 24 hours with your free estimate
        </p>
      </form>
    </div>

    <!-- Contact Information -->
    <div class="space-y-8">
      <!-- Primary Contact -->
      <div class="bg-slate-50 dark:bg-slate-800 rounded-2xl p-8 border border-slate-100 dark:border-slate-700">
        <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">Get In Touch</h3>

        <div class="space-y-6">
          <!-- Phone -->
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div
                class="w-12 h-12 rounded-xl flex items-center justify-center"
                style="background-color: var(--aw-color-primary);"
              >
                <Icon name="tabler:phone" class="w-6 h-6 text-white" />
              </div>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-bold text-slate-900 dark:text-white">Call Us</h4>
              <p class="text-slate-600 dark:text-slate-300 mt-1">Ready to discuss your project?</p>
              <a
                href="tel:2263504642"
                class="text-2xl font-black hover:underline transition-all duration-200 mt-2 block"
                style="color: var(--aw-color-primary);"
              >
                (226) 350-4642
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div
                class="w-12 h-12 rounded-xl flex items-center justify-center"
                style="background-color: var(--aw-color-primary);"
              >
                <Icon name="tabler:mail" class="w-6 h-6 text-white" />
              </div>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-bold text-slate-900 dark:text-white">Email Us</h4>
              <p class="text-slate-600 dark:text-slate-300 mt-1">Send us your project details</p>
              <a
                href="mailto:info@shieldsconcrete.ca"
                class="text-lg font-bold hover:underline transition-all duration-200 mt-2 block"
                style="color: var(--aw-color-primary);"
              >
                info@shieldsconcrete.ca
              </a>
            </div>
          </div>

          <!-- Service Area -->
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div
                class="w-12 h-12 rounded-xl flex items-center justify-center"
                style="background-color: var(--aw-color-primary);"
              >
                <Icon name="tabler:map-pin" class="w-6 h-6 text-white" />
              </div>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-bold text-slate-900 dark:text-white">Service Area</h4>
              <p class="text-slate-600 dark:text-slate-300 mt-1">
                Windsor, Essex County<br />
                & Surrounding Areas
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Hours -->
      <div class="bg-slate-50 dark:bg-slate-800 rounded-2xl p-6 border border-slate-100 dark:border-slate-700">
        <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Business Hours</h4>
        <div class="space-y-2 text-slate-600 dark:text-slate-300">
          <div class="flex justify-between">
            <span>Monday - Friday:</span>
            <span class="font-bold">7:00 AM - 6:00 PM</span>
          </div>
          <div class="flex justify-between">
            <span>Saturday:</span>
            <span class="font-bold">8:00 AM - 4:00 PM</span>
          </div>
          <div class="flex justify-between">
            <span>Sunday:</span>
            <span class="font-bold">Closed</span>
          </div>
          <p class="text-sm mt-3 text-slate-500 dark:text-slate-400">Emergency services available by appointment</p>
        </div>
      </div>
    </div>
  </div>
</WidgetWrapper>
