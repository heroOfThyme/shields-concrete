---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';
import { footerData } from '~/navigation';

const currentYear = new Date().getFullYear();

// Extract navigation links for the footer
const navigationLinks = [
  { text: 'About Us', href: '/#about' },
  { text: 'Our Services', href: '/#services' },
  { text: 'Our Work', href: '/#projects' },
  { text: 'Message Us', href: '/#contact' },
];
---

<footer class="bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12">
    <div class="grid md:grid-cols-3 gap-8 items-start">
      <!-- Company Info -->
      <div class="text-center md:text-left">
        <h3 class="text-2xl font-black text-white mb-3">Shields Cement Inc.</h3>
        <p class="text-slate-300 mb-4">Professional concrete solutions in Windsor & Essex County.</p>

        <!-- Contact Button -->
        <Button
          variant="primary"
          href="tel:2263504642"
          text="Call (226) 350-4642"
          icon="tabler:phone"
          class="inline-flex items-center px-6 py-3 font-bold"
        />
      </div>

      <!-- Quick Links (Using Navigation Data) -->
      <div class="text-center flex flex-col items-center">
        <h4 class="text-lg font-bold text-white mb-4">Quick Links</h4>
        <nav class="space-y-2">
          {
            navigationLinks.map(({ text, href }) => (
              <a href={href} class="block text-slate-300 hover:text-primary transition-colors duration-200">
                {text}
              </a>
            ))
          }
        </nav>
      </div>

      <!-- Legal & Social -->
      <div class="text-center md:text-right">
        <h4 class="text-lg font-bold text-white mb-4">Connect With Us</h4>

        <!-- Social Links (Using Footer Data) -->
        {
          footerData.socialLinks?.length && (
            <div class="flex justify-center md:justify-end space-x-4 mb-6">
              {footerData.socialLinks.map(({ ariaLabel, href, icon }) => (
                <a
                  href={href}
                  class="w-10 h-10 rounded-full bg-slate-700 hover:bg-brand-red flex items-center justify-center transition-colors duration-200"
                  aria-label={ariaLabel}
                >
                  <Icon name={icon} class="w-5 h-5" />
                </a>
              ))}
            </div>
          )
        }

        <!-- Legal Links (Using Footer Data) -->
        {
          footerData.secondaryLinks?.length && (
            <div class="space-y-2">
              {footerData.secondaryLinks.map(({ text, href }) => (
                <a href={href} class="block text-slate-300 hover:text-primary transition-colors duration-200">
                  {text}
                </a>
              ))}
            </div>
          )
        }
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-slate-700 mt-8 pt-6">
      <div class="flex flex-col sm:flex-row justify-between items-center text-sm text-slate-400">
        <!-- Copyright -->
        <div class="mb-4 sm:mb-0">
          <p>&copy; {currentYear} Shields Cement Inc. All rights reserved.</p>
        </div>

        <!-- Made By -->
        <div class="flex items-center space-x-4">
          <span>Website by</span>
          <a
            href="https://rvbcorp.com"
            target="_blank"
            rel="noopener noreferrer"
            class="font-bold hover:underline transition-all duration-200 text-brand-red"
          >
            RVB Data Sciences
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
