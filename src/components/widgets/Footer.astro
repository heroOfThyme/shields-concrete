---
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8">
    <div class="grid md:grid-cols-3 gap-8 items-center">
      <!-- Company Info -->
      <div class="text-center md:text-left">
        <h3 class="text-2xl font-bold text-white mb-2">Shields Concrete</h3>
        <p class="text-gray-300">Professional concrete services in Windsor & Essex County</p>
      </div>

      <!-- Quick Contact -->
      <div class="text-center">
        <p class="text-gray-300 mb-2">Ready to start your project?</p>
        <a href="tel:2263504642" class="text-2xl font-bold text-orange-400 hover:text-orange-300 transition-colors">
          (226) 350-4642
        </a>
      </div>

      <!-- Quick Links (One-Page Navigation) -->
      <div class="text-center md:text-right">
        <nav class="space-x-6">
          <a href="#about" class="text-gray-300 hover:text-white transition-colors">About</a>
          <a href="#services" class="text-gray-300 hover:text-white transition-colors">Services</a>
          <a href="#projects" class="text-gray-300 hover:text-white transition-colors">Work</a>
          <a href="#contact" class="text-gray-300 hover:text-white transition-colors">Contact</a>
        </nav>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 mt-8 pt-6">
      <div class="flex flex-col sm:flex-row justify-between items-center text-sm text-gray-400">
        <!-- Copyright -->
        <div class="mb-4 sm:mb-0">
          <p>&copy; {currentYear} Shields Concrete. All rights reserved.</p>
        </div>

        <!-- Made By -->
        <div class="flex items-center space-x-4">
          <span>Website by</span>
          <a
            href="https://rvbdatasciences.com"
            target="_blank"
            rel="noopener noreferrer"
            class="font-semibold text-orange-400 hover:text-orange-300 transition-colors"
          >
            RVB Data Sciences
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
