---
import { Icon } from 'astro-icon/components';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import type { Widget } from '~/types';

export interface ServiceItem {
  title: string;
  description: string;
  detailedDescription: string;
  icon: string;
  features?: string[];
  timeline?: string;
  priceRange?: string;
}

export interface Props extends Widget {
  title?: string;
  subtitle?: string;
  tagline?: string;
  services: ServiceItem[];
  columns?: number;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  services = [],
  columns = 3,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  
  <div class={`grid gap-8 ${
    columns === 3 ? 'md:grid-cols-2 lg:grid-cols-3' : 
    columns === 2 ? 'md:grid-cols-2' : 
    'grid-cols-1'
  }`}>
    {services.map((service) => (
      <div class="bg-white dark:bg-slate-900 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade intersect-quarter">
        <!-- Service Header -->
        <div class="p-6 bg-gradient-to-br from-orange-50 to-orange-100 dark:from-slate-800 dark:to-slate-700">
          <div class="flex items-center mb-4">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 bg-orange-500 rounded-xl flex items-center justify-center">
                <Icon name={service.icon} class="w-8 h-8 text-white" />
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{service.title}</h3>
              <p class="text-gray-600 dark:text-gray-300 font-medium">{service.description}</p>
            </div>
          </div>
        </div>

        <!-- Service Content -->
        <div class="p-6">
          <p class="text-gray-700 dark:text-gray-300 mb-6 leading-relaxed text-lg">
            {service.detailedDescription}
          </p>
          
          {service.features && (
            <div class="mb-6">
              <h4 class="font-bold text-gray-900 dark:text-white mb-3 text-lg">What's Included:</h4>
              <ul class="space-y-2">
                {service.features.map(feature => (
                  <li class="flex items-center text-gray-600 dark:text-gray-300">
                    <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                      <Icon name="tabler:check" class="w-3 h-3 text-white" />
                    </div>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          {(service.timeline || service.priceRange) && (
            <div class="grid grid-cols-2 gap-4 mb-6 p-4 bg-gray-50 dark:bg-slate-800 rounded-lg">
              {service.timeline && (
                <div class="text-center">
                  <div class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1">Timeline</div>
                  <div class="text-lg font-bold text-gray-900 dark:text-white">{service.timeline}</div>
                </div>
              )}
              {service.priceRange && (
                <div class="text-center">
                  <div class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1">Starting From</div>
                  <div class="text-lg font-bold text-orange-600 dark:text-orange-400">{service.priceRange}</div>
                </div>
              )}
            </div>
          )}
          
          <a 
            href="#contact" 
            class="inline-flex items-center justify-center w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-200 text-lg"
          >
            Get Free Quote for {service.title}
            <Icon name="tabler:arrow-right" class="w-5 h-5 ml-2" />
          </a>
        </div>
      </div>
    ))}
  </div>
</WidgetWrapper>