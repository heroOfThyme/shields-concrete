---
import '@fontsource-variable/inter';
import '@fontsource-variable/roboto-condensed';
import '@fontsource-variable/open-sans';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Open Sans';
    --aw-font-serif: 'Open Sans';
    --aw-font-heading: 'Roboto Condensed';

    /* Shields Concrete Brand Colors */
    --aw-color-primary: rgb(220 38 38); /* Red #dc2626 - CTAs, phone numbers, urgent actions */
    --aw-color-secondary: rgb(185 28 28); /* Darker red #b91c1c - hover states */
    --aw-color-accent: rgb(239 68 68); /* Lighter red #ef4444 - highlights */

    /* Updated Text Colors - Consistent Slate Palette */
    --aw-color-text-heading: rgb(15 23 42); /* Slate-900 #0f172a - strong headings, primary text */
    --aw-color-text-default: rgb(51 65 85); /* Slate-700 #334155 - body text, readable paragraphs */
    --aw-color-text-muted: rgb(100 116 139); /* Slate-500 #64748b - muted text, captions */

    /* Updated Background Colors - Clean Whites */
    --aw-color-bg-page: rgb(255 255 255); /* Pure white #ffffff - main page background */
    --aw-color-bg-page-light: rgb(248 250 252); /* Slate-50 #f8fafc - subtle section backgrounds */
    --aw-color-bg-page-dark: rgb(15 23 42); /* Slate-900 for dark sections (hero overlays) */

    /* Additional Brand Colors */
    --aw-color-gray-light: rgb(248 250 252); /* Slate-50 #f8fafc - light backgrounds, cards */
    --aw-color-gray-medium: rgb(148 163 184); /* Slate-400 #94a3b8 - borders, dividers */
    --aw-color-gray-dark: rgb(51 65 85); /* Slate-700 #334155 - dark elements in light mode */

    /* Border Colors for Consistency */
    --aw-color-border-light: rgb(226 232 240); /* Slate-200 #e2e8f0 - light borders */
    --aw-color-border-medium: rgb(148 163 184); /* Slate-400 #94a3b8 - medium borders */

    ::selection {
      background-color: rgb(220 38 38 / 0.2); /* Light red selection */
      color: rgb(15 23 42);
    }
  }
</style>
